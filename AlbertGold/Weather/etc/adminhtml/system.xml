<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="albertgold" translate="label" sortOrder="10">
            <label>AlbertGold</label>
        </tab>
        <section id="weather" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Weather</label>
            <tab>albertgold</tab>
            <resource>AlbertGold_Weather::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="api" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Api Key</label>
                    <comment>To get your api key visit https://openweathermap.org/</comment>
                </field>
                <field id="location" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Location</label>
                    <comment>City name</comment>
                </field>
            </group>
        </section>
    </system>
</config>
