<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>
        <referenceContainer name="header-wrapper">
            <block class="AlbertGold\Weather\Block\Link" name="weather.header.link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Weather</argument>
                    <argument name="path" xsi:type="string">weather/weather/index</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
